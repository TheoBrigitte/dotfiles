_gsctl()
{
    last_command="gsctl"
    commands=()
    commands+=("completion")
    commands+=("create")
    commands+=("delete")
    commands+=("info")
    commands+=("list")
    commands+=("login")
    commands+=("logout")
    commands+=("ping")
    commands+=("scale")
    commands+=("select")
    commands+=("show")
    commands+=("version")

    flags=()
    two_word_flags=()
    local_nonpersistent_flags=()
    flags_with_completion=()
    flags_completion=()

    flags+=("--auth-token=")
    flags+=("--config-dir=")
    flags+=("--endpoint=")
    two_word_flags+=("-e")
    flags+=("--verbose")
    flags+=("-v")

    must_have_one_flag=()
    must_have_one_noun=()
    noun_aliases=()
}

__start_gsctl()
{
    local cur prev words cword
    declare -A flaghash 2>/dev/null || :
    if declare -F _init_completion >/dev/null 2>&1; then
        _init_completion -s || return
    else
        __my_init_completion -n "=" || return
    fi

    local c=0
    local flags=()
    local two_word_flags=()
    local local_nonpersistent_flags=()
    local flags_with_completion=()
    local flags_completion=()
    local commands=("gsctl")
    local must_have_one_flag=()
    local must_have_one_noun=()
    local last_command
    local nouns=()

    __handle_word
}

if [[ $(type -t compopt) = "builtin" ]]; then
    complete -o default -F __start_gsctl gsctl
else
    complete -o default -o nospace -F __start_gsctl gsctl
fi

