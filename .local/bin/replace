#!/usr/bin/env bash

if [ $# -lt 3 ]; then
	echo "Usage: replace <a> <b> <dir>
Replace <a> with <b> for every file found in <dir>."
	exit 1
fi

a=$1
shift
b=$1
shift
dir=$1
shift
a="${a//\//\\/}"
b="${b//\//\\/}"

find "$dir" \( -path ./.git -o -path ./vendor \)  -prune -o -type f -print | xargs -tI{} sed -i -e "s/${a}/${b}/g" "{}"
